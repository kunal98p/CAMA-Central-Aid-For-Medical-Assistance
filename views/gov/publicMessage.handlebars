<div class="card card-body">
  <h3>Send General Notices and Public Schemes</h3>
  <form action="/gov/message" method="post">
    <div class="form-group">
      <label for="type">Type</label>
      <select class="form-control" name="type">
        <option>Public Schemes</option>
        <option>General Notice</option>
      </select>
    </div>

    <div class="form-group">
      <label for="location">Location</label>
      <select class="form-control" name="location">
        <option>All</option>
        <option>Rajkot</option>
        <option>Morvi</option>
        <option>Jasdan</option>
        <option>Upleta</option>
        <option>Dhoraji</option>
        <option>Kotda Sangani</option>
        <option>Tankara</option>

      </select>
    </div>
    <div class="form-group">
      <label for="message">Message</label>
      <textarea class="form-control" name="message" required
        placeholder="(Multilingual Support. Write text in Hindi/English/Gujarati)"></textarea>
    </div>

    <div class="text-center">
      <button type="submit" class="btn btn-primary " id="x">Submit</button>
    </div>
  </form>
  <div class="dropdown">
    <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" onclick="fn()">
      Schedule?
    </button>
    <div class="dropdown-menu">
      <br>
      <div class="ml-4 mr-4">
        <label for="start" class="font-weight-bold ">Scheduled Date </label>
        <input class="form-control" type="date" id="start" name="trip-start" value="2020-01-23" min="2018-01-01"
          max="2018-12-31" id="d">
      </div>
      <br>

      <div class="ml-4 mr-4">
        <label for="start" class="font-weight-bold ">Scheduled Time </label>
        <input type="time" name="usr_time" class="form-control">
      </div>
      <br>
      <div class="text-center">
        <button type="submit" class="btn btn-primary ">Submit</button>
      </div>
    </div>

  </div>




</div>
<br>
<h4 class="lead text-center text-white">Government Notices and Schemes</h4>
<br>
<input class="form-control mx-auto w-75 " id="searchScheme" type="text" onkeyup="searchSchema()"
  placeholder="Search Schemes/Notices">

{{#each govData}}
<div class="yy">
  <div class="card card-body mt-3 ">


    <div class="row">
      <div class="col-3">
        {{#ifCond type "General Notice" }}
        <h5 class="lead ttype btn btn-block btn-warning">{{type}} (GN)</h5>
        {{/ifCond}}
        {{#ifCond type "Public Schemes" }}
        <h5 class="lead ttype btn btn-block btn-info">{{type}} (PS)</h5>
        {{/ifCond}}


      </div>
      <div class="col-8 text-right">
        <h5 class="lead ">{{date}}</h5>


        <a class=" btn btn-danger w-25  text-white ">Edit</a>

        <a class="  btn btn-danger w-25 text-white  ">Delete</a>

      </div>
    </div>

    <p class=" font-weight-bold m-3">=> {{message}}</p>
  </div>
</div>
{{/each}}

<script>

  function searchSchema() {
    input = document.getElementById("searchScheme")

    filter = input.value.toUpperCase();
    ul = document.getElementsByClassName("yy");

    for (i = 0; i < ul.length; i++) {
      str = ul[i].innerText.toUpperCase();

      if (str.includes(filter)) {
        ul[i].style.display = "";
      }
      else {
        ul[i].style.display = "none";
      }
    }
  }
  function fn() {


    var x = document.getElementById("x");
    if (x.style.visibility === "hidden") {
      x.style.visibility = "visible";
    } else {
      x.style.visibility = "hidden";
    }



  }


</script>